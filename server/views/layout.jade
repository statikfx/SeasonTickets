doctype html
html
  head
    meta(charset='utf-8')
    title #{site.title + ((admin && " | Admin") || "") + ((page.title && " | " + page.title) || "")}
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/jquery-1.6.2.min.js')
  body(class="#{(admin && 'admin') || ''}")
    #wrapper
      #header
        #nav
          ul
            li.title
              - if (path === "/")
                | 2011 Season Tickets
              - else  
                a(href='/') 2011 Season Tickets
            li
              a(href='/about/') About
            li
              a(href='http://github.com/statikfx/SeasonTickets') GitHub
        - if (path === "/" || admin)
          #filter
            select#filterselect.dropdown
              option(value="all")
                | All
              option(value="nights")
                | Nights
              option(value="weekends")
                | Weekends
              option(value="u50")
                | Under $50
              option(value="u30")
                | Under $30
              option(value="available")
                | Available
        .clear
      #container
        != body
    #footer
      span
        | Â© 2011 
        a(href='http://twitter.com/statikfx/') Rob Shaw
        |  and  
        a(href='http://twitter.com/chandlerkent/') Chandler Kent
    script(src='/js/app.js')

